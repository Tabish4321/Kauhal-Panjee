<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.kaushalpanjee.model.Scheme" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:elevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardScheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSchemeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_sub_text"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:gravity="start|center_vertical"
                android:padding="@dimen/dp_12"
                android:text="@{data.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintTop_toTopOf="@+id/tvSchemeName"
                app:layout_constraintBottom_toBottomOf="@+id/tvSchemeName"
                app:layout_constraintEnd_toEndOf="@+id/tvSchemeName"
                android:layout_marginEnd="@dimen/dp_10"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSchemeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_light_grey"
                android:visibility="gone"
                android:padding="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSchemeName">

                <androidx.media3.ui.PlayerView
                    android:id="@+id/playerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:show_buffering="when_playing"
                    app:use_controller="true" />

                <View
                    android:id="@+id/line"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/color_sub_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/playerView" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSchemePoint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_marginTop="@dimen/dp_7"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_scheme_point" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>